{
	"files.associations": {
		"wrangler.json": "jsonc",
		".cursorrules": "markdown"
	},
	"vitest.enable": true,
	"vitest.rootConfig": "./vitest.config.ts",
	"vitest.commandLine": "npm run test",
	// Ensure .cursorrules is always visible and prioritized
	"files.watcherExclude": {
		"**/.cursorrules": false
	},
	"search.exclude": {
		"**/.cursorrules": false
	},
	"files.exclude": {
		"**/.cursorrules": false
	},
	// Pin important project files to the top of Explorer
	"explorer.sortOrder": "type",
	"explorer.fileNesting.enabled": false,
	// Copilot should always consider .cursorrules
	"github.copilot.advanced": {
		"debug.overrideEngine": "copilot-chat",
		"debug.useNodeFetcher": false
	},
	"chat.mcp.serverSampling": {
		"zenbooker-mcp-cloudflare/.vscode/mcp.json: memory-system": {
			"allowedModels": [
				"copilot/gpt-4.1",
				"copilot/claude-3.5-sonnet",
				"copilot/claude-3.7-sonnet",
				"copilot/claude-3.7-sonnet-thought",
				"copilot/claude-sonnet-4",
				"copilot/gemini-2.0-flash-001",
				"copilot/gemini-2.5-pro",
				"copilot/gpt-4o",
				"copilot/gpt-5",
				"copilot/gpt-5-mini",
				"copilot/o3-mini",
				"copilot/o4-mini"
			]
		}
	}
}